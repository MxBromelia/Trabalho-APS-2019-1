<h1>Áreas de Concentração</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.name %></td>
        <td><%= link_to t('buttons.general.edit'), edit_field_path(field) %></td>
        <td><%= link_to 'Remover', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class='row'>
  <div class='col'>
    <%= link_to new_field_path, class: 'btn btn-primary pull-right' do %>
      <%= t('buttons.general.new', model: Keyword.model_name.human) %>
    <% end %>
  </div>
</div>
