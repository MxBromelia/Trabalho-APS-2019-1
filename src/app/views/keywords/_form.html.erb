<%= form_with(model: keyword, local: true) do |form| %>
  <% if keyword.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(keyword.errors.count, "error") %> prohibited this keyword from being saved:</h2>

      <ul>
      <% keyword.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :word %>
    <%= form.text_field :word, class: 'form-control'%>
  </div>

  <div class="actions">
    <%= link_to 'Voltar', keywords_path, class:'btn btn-secondary' %>
    <%= form.submit class: 'btn btn-primary pull-right'%>
  </div>
<% end %>
