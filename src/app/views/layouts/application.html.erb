<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <%= link_to 'Sistema de Submissão de Artigos', root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Perfil', home_profile_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to notifications_path, class: 'nav-link' do %>
                <%=  Notification.model_name.human(count:2) %>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, class: 'nav-link', method: :delete do %>
                <%=  t('devise.logout') %>
              <% end %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to 'Entrar', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Registrar-se", new_user_registration_path, class: 'nav-link' %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    
    <!-- Page Content -->
    <div class='container'>
      <div class='row'>
          <div class="col-lg-3">
              <h1 class="my-4 text-center">Menu</h1>
              <div class="list-group">
                <%= link_to 'Home', root_path, class: 'list-group-item' %>
                <%= link_to 'Eventos', events_path, class: 'list-group-item' %>
                <% if user_signed_in? %>
                  <% case current_user.role %>
                  <% when 'student' %>
                    <%= link_to 'Artigos Submetidos', '#', class: 'list-group-item' %>
                  <% when 'professor' %>
                    <%= link_to 'Revisões de Artigos', proofreadings_path, class: 'list-group-item' %>
                  <% when 'admin' %>
                    <%= link_to 'Palavras-Chave', keywords_path, class: 'list-group-item' %> 
                    <%= link_to 'Áreas', fields_path, class: 'list-group-item' %>
                  <% end %>
                <% end %>
              </div>
            </div>
            <!-- /.col-lg-3 -->
      
            <div class="col-lg-9 main-container">
              <%= yield %>
            </div>
            <!-- /.col-lg-9 -->
      </div>
    </div>
    <!-- /.container -->
  </body>
</html>
