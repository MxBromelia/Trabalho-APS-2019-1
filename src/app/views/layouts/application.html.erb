<!DOCTYPE html>
<html>
  <head>
    <title>Src</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='row'>
      <div class="col-6">
          <%= link_to 'Home', root_path %>
          | <%= link_to 'Eventos', events_path %>
          <% if user_signed_in? %>|
            <% case current_user.role %>
            <% when 'student' %>
              <%= link_to 'Artigos Submetidos', '#' %>
            <% when 'professor' %>
              <%= link_to 'Revisões de Artigos', proofreadings_path %>
            <% when 'admin' %>
              <%= link_to 'Palavras-Chave', keywords_path %> | 
              <%= link_to 'Áreas', fields_path %>
            <% end %>
          <% end %>
      </div>
      <div class="col-6" align='right'>
          <% if user_signed_in? %>
          <%= link_to current_user.name, home_profile_path %>
          | <%= link_to t('devise.logout'), destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to "Entrar", new_user_session_path %>
          | <%= link_to "Registrar-se", new_user_registration_path %>
        <% end %>
      </div>
    </div>
    <hr>
    <div class='container main-container' style="background: #eee">
      <%= yield %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </div>
  </body>
</html>
