<%= search_form_for @q do |f| %>
<div class='form-row'>
  <div class='form-group col-lg'>
    <%= f.label :name %>
    <%= f.search_field :name_cont, class: 'form-control'%>
  </div>
</div>
<div class='form-row'>
    <div class='form-group col-lg'>
        <%= f.label :email %>
        <%= f.search_field :email_cont, class: 'form-control'%>
      </div>
</div>
<div class='form-row'>
  <div class='form-group col-lg'>
    <%= f.label :role %>
    <%= f.select :role_eq, @roles, {prompt: true}, class: 'form-control' %>
  </div>
</div>

<div class='form-group' align=right>
  <%= link_to users_path, class: 'btn btn-secondary' do %>
  <i class='fas fa-trash'></i> <%= t 'buttons.general.clear'%>
  <% end %>
  <%= f.submit class: 'btn btn-primary' %>
</div>
<% end %>